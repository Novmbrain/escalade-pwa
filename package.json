{
  "name": "bloc-top",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ct": "playwright test -c playwright-ct.config.ts",
    "test:ct:ui": "playwright test -c playwright-ct.config.ts --headed",
    "test:ct:debug": "SLOW_MO=800 playwright test -c playwright-ct.config.ts --headed --workers=1",
    "ci": "nx run-many -t lint typecheck test:run test:ct",
    "db:seed": "npx tsx scripts/seed.ts development",
    "db:seed:prod": "npx tsx scripts/seed.ts production",
    "db:migrate": "npx tsx scripts/migrate-add-cityid.ts development",
    "db:migrate:prod": "npx tsx scripts/migrate-add-cityid.ts production",
    "db:backup": "npx tsx scripts/backup-to-db.ts",
    "prepare": "husky"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "^build",
          "lint",
          "typecheck",
          "test:run"
        ]
      },
      "ci": {
        "dependsOn": [
          "lint",
          "typecheck",
          "test:run",
          "test:ct"
        ]
      }
    }
  },
  "dependencies": {
    "@amap/amap-jsapi-loader": "^1.0.1",
    "@aws-sdk/client-s3": "^3.975.0",
    "@better-auth/passkey": "^1.4.18",
    "@radix-ui/react-slot": "^1.2.4",
    "@serwist/next": "^9.5.0",
    "better-auth": "^1.4.18",
    "browser-image-compression": "^2.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "mongodb": "^7.0.0",
    "next": "16.1.2",
    "next-intl": "^4.7.0",
    "next-themes": "^0.4.6",
    "pinyin-pro": "^3.28.0",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-easy-crop": "^5.5.6",
    "react-zoom-pan-pinch": "^3.7.0",
    "resend": "^6.9.2",
    "serwist": "^9.5.0",
    "swr": "^2.4.0",
    "tailwind-merge": "^3.4.0",
    "worker": "^0.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint",
    "*.{js,mjs}": "eslint"
  },
  "devDependencies": {
    "@nx/workspace": "^22.4.5",
    "@playwright/experimental-ct-react": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.2",
    "fake-indexeddb": "^6.2.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "nx": "^22.4.5",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.17"
  }
}
